{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <h1>Saison {{ season.number }} de {{ program.title }}</h1>

    {% for episode in episodes %}
        <div>
            <a href="{{ path('program_episode_show', { programId : program.id, seasonId : season.id, episodeId : episode.id }) }}">
                <h3>Episode {{ episode.number }} - {{ episode.title }}</h3></a>
            <p>{{ episode.synopsis }}</p>
        </div>
    {% endfor %}

    <a href="{{ path("program_show", { id: program.id }) }}">Retour Ã  la liste des saisons</a>

{% endblock %}
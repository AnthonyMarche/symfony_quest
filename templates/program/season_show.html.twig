{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <h1>Saison {{ season.number }} de {{ program.title }}</h1>

    {% for episode in episodes %}
        <div>
            <a href="{{ path('program_episode_show', { 'programSlug' : program.slug, 'seasonId' : season.id, 'episodeSlug' : episode.slug }) }}">
                <h3>Episode {{ episode.number }} - {{ episode.title }}</h3></a>
            <p>{{ episode.synopsis }}</p>
        </div>
    {% endfor %}

    <a href="{{ path("program_show", { slug: program.slug }) }}">Retour Ã  la liste des saisons</a>

{% endblock %}